#include <stdio.h>
#include <string.h>

int main (void) {

  char Answer[15];
  int Num;
  char *Pickup[] = {
        "Did you fart?",
        "Are you http?",
        "Are you my phone screen?"
  };
  char *Line[] = {
        "Cause you blew me away!",
        "Because without you I'm just ://",
        "Cause I wanna touch you every second."
  };

  printf("Please choose a number from 1 to 3");
  scanf("%d", &Num);

  switch (Num){
    case 1 
        printf("%s", Pickup[0]);
      printf("\n");
      
      scanf("%s", Answer);
      printf("\n");
      
      printf("%s", Line[0]);
    
    break;

  case 2
      printf("%s", Pickup[1]);
      printf("\n");
      
      scanf("%s", Answer);
      printf("\n");
      
      printf("%s", Line[1]);
  break;
    
  }

  return 0;
  
}